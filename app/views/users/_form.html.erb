<div class="container">
	<div class="row justify-content-center">
		<div class="col-10">

			<%= render 'shared/errors', obj: @user %>
			<%= form_with(model: @user, class: "shadow p-3 mb-2 bg-info rounded text-white", local: true) do |f| %>
			
				<div class="form-group row justify-content-center text-center">

					<%= f.label :username, class: "col-sm-2 col-form-lable" %>

					<div class="col-lg-10">

						<%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Choose a username"  %>

					</div>

				</div>

				<div class="form-group row justify-content-center text-center">

					<%= f.label :password, class: "col-sm-2 col-form-lable" %>

					<div class="col-lg-10">

						<%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>

					</div>
					
				</div>

				<div class="form-group row justify-content-center text-center">

					<%= f.label :email, class: "col-sm-2 col-form-lable" %>

					<div class="col-lg-10">

						<%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>

					</div>
					
				</div>

				<div class="form-group text-center">

					<%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-outline-light btn-lg") %>

				</div>

			<% end %>

		</div>

			<%= link_to "[ Cancel and return to Articles Index ]", articles_path, class: "text-info mb-3" %>
			
	</div>
</div>