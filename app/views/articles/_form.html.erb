<div class="container">
	<div class="row justify-content-center">
		<div class="col-10">

			<%= render 'shared/errors' %>
			<%= form_with(model: @article, class: "shadow p-3 mb-2 bg-info rounded text-white", local: true) do |f| %>
			
				<div class="form-group row justify-content-center text-center">

					<%= f.label :title, class: "col-sm-2 col-form-lable" %>

					<div class="col-lg-10">

						<%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Article"  %>

					</div>

				</div>

				<div class="form-group row justify-content-center text-center">

					<%= f.label :description, class: "col-sm-2 col-form-lable" %>

					<div class="col-lg-10">

						<%= f.text_area :description, rows: 5, class: "form-control shadow rounded", placeholder: "Description of Article" %>

					</div>
					
				</div>

				<div class="form-group text-center">

					<%= f.submit class: "btn btn-outline-light btn-lg" %>

				</div>

			<% end %>

		</div>

			<%= link_to "[ Cancel and return to Articles Index ]", articles_path, class: "text-info mb-3" %>
			
	</div>
</div>