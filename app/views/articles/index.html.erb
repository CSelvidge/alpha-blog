<h1>Articles</h1>

<table>
	<h2><%= link_to 'Create New Article', new_article_path %></h2>
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th colspan="2">Actions</th>
		</tr>
	</thead>

	<tbody>
		<% @articles.each do |article| %>
			<tr>
				<td><%= link_to article.title, article_path(article.id) %></td>
				<td><%= article.description%></td>
				<td>| <%= link_to 'Delete', article_path(article.id), method: :delete, data: { confirm: "Are you sure you want to delete this article?" } %></td>
				<td>| <%= link_to 'Edit Article', edit_article_path(article.id) %> |</td>
			</tr>
		<% end %>
	</tbody>
</table>

