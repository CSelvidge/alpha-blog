	<div class="row justify-content-center">
		<div class="col-8 mt-4">
			<div class="card text-center shadow bg-black rounded">
				<div class="card-header font-italic">
					by <%= article.user.username %>
				</div>
				<div class="card-body justify-content-md-center">

					<% if  current_page?(:controller => 'articles', :action =>'index') %>
						<h5 class="card-title"><%= link_to article.title, article_path(article.id), class: "text-success" %></h5>
					<% end %>

					<% if article.created_at != article.updated_at%> 
						 Last edited <%= article.updated_at %>.
					<% end %>

					<% if  current_page?(:controller => 'articles', :action =>'index') %>
						<p class="card-text"><%= truncate(simple_format(article.description), escape: false, length: 69) %> </p>
					<% else %>
						<div class="card-text text-left"><%= simple_format(article.description) %> </div>
					<% end %>

					<%= link_to "Edit", edit_article_path(article.id), class: "btn btn-outline-info" %>

					<%= link_to "Delete", article_path(article.id), method: :delete, data: { confirm: "Are you sure you want to delete this article?" }, class: "btn btn-outline-danger" %>
					
				</div>
				<div class="card-footer text-muted">
					<small>Created <%= time_ago_in_words(article.created_at) %> ago </small>
					<% if article.created_at != article.updated_at %> 
						<small>, edited <%= time_ago_in_words(article.updated_at) %> ago</small>
					<% end %>
				</div>
			</div>
		</div>
	</div>