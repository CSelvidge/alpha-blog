<h1>Showing article details</h1>

<% if @article.created_at != @article.updated_at %>
	<h3>Article was last updated at <%= @article.updated_at %></h3>
<% end %>
<p><strong>Title: </strong> <%= @article.title %></p>
<p><strong>Description: </strong> <%= @article.description %></p>

<%= link_to 'Delete', article_path(@article.id), method: :delete, data: { confirm: "Are you sure you want to delete this article?" }   %> | <%= link_to 'Edit', edit_article_path(@article.id) %> | <%= link_to 'Articles Index', articles_path %>